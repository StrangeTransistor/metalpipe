{
	"files": [ "index.ts" ],

	"include": [ "ambient.d.ts" ],

	"compilerOptions":
	{
		"noEmit": true,
		"pretty": true,

		"strict": true,

		"target": "ES6",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,

		"baseUrl": ".",
		"paths":
		{
			"~lib/*": [ "./lib/*" ]
		}
	}
}